<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <a href="/account">Client Area</a>
    
    <h1><%= title %> v.1</h1>
    <form action="/" method="POST">
      <input type="text" name="name" autofocus>
      <input type="submit">
    </form>
    <br>
    <%
    if (locals.data)
    {
      if (data.length == 0)
      {%>
        No Record Found 
      <%
      }
      else
      {%>
        <h3>Searching for <b>'<%= keyword %>'</b></h3>
        Total Results Found: <b><%=data.length %></b>
<br>
        <%

        for (var i=0; i<data.length; i++)
        {%>
          <br>
          <%= (i+1)+"  "+data[i].fullName %>
          
        <%
        }
      }
    }
       
   
    
    
    %>
    <br><br>
    
  </body>
